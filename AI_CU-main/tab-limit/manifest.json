{
    "manifest_version": 3,
    "name": "Tab Limiter",
    "description": "Limits the number of open tabs and restricts visited sites.",
    "version": "1.0",

    "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "activeTab",
    "declarativeNetRequest"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "action": {
      "default_popup": "extension.html",
      "default_icon": "images/tab-icon.png"
    },

    "background": {
        "service_worker": "background.js"
    }
  }
